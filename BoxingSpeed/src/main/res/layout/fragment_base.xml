<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/topbar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_default_height"
        android:background="@drawable/top_default_bg"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_gravity="center"
        android:gravity="center" >

        <!-- 左侧的按钮 -->
        <RelativeLayout
            android:id="@+id/top_left_container"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical|left" >

            <ImageView
                android:id="@+id/top_left_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"
                android:scaleType="center"/>

            <TextView
                android:id="@+id/top_left_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/top_left_image"
                android:gravity="center_vertical"
                android:textColor="@color/default_title_color"
                android:textSize="14sp" />
        </RelativeLayout>

        <!-- 居中的标题栏 -->
        <TextView
            android:id="@+id/base_fragment_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@android:color/black"
            android:textSize="@dimen/top_title_size"
            android:textStyle="bold" />

        <!-- 右侧的按钮 -->
        <RelativeLayout
            android:id="@+id/top_right_container"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical|right" >

            <ImageView
                android:id="@+id/top_right_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"
                android:scaleType="center"/>

            <TextView
                android:id="@+id/top_right_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/top_right_image"
                android:gravity="center_vertical"
                android:textColor="@color/default_title_color"
                android:textSize="14sp" />
        </RelativeLayout>

    </FrameLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:paddingBottom="0dp"
        android:background="@drawable/divide_line" />

</LinearLayout>

