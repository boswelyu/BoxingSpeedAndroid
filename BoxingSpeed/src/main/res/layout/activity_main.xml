<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_bk"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <com.tealcode.boxingspeed.ui.widget.NaviTabButton
            android:id="@+id/tabbutton_boxing"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <com.tealcode.boxingspeed.ui.widget.NaviTabButton
            android:id="@+id/tabbutton_friends"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <com.tealcode.boxingspeed.ui.widget.NaviTabButton
            android:id="@+id/tabbutton_ranking"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <com.tealcode.boxingspeed.ui.widget.NaviTabButton
            android:id="@+id/tabbutton_arena"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <com.tealcode.boxingspeed.ui.widget.NaviTabButton
            android:id="@+id/tabbutton_profiler"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>